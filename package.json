{
  "name": "microservices-app",
  "version": "0.0.1",
  "description": "",
  "author": "Murtaza Hussain",
  "private": true,
  "license": "LGPL-2.1-or-later",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "install:all": "npm install && npm run install:gateway && npm run install:stats && npm run install:timeseries",
    "install:gateway": "cd gateway-service && npm install",
    "install:stats": "cd stats-service && npm install",
    "install:timeseries": "cd timeseries-service && npm install",
    "build:all": "npm run build:gateway && npm run build:stats && npm run build:timeseries",
    "build:gateway": "nest build gateway",
    "build:stats": "nest build stats",
    "build:timeseries": "nest build timeseries",
    "start:gateway": "nest start gateway",
    "start:stats": "nest start stats",
    "start:timeseries": "nest start timeseries",
    "start:dev:gateway": "nest start --watch gateway",
    "start:dev:stats": "nest start --watch stats",
    "start:dev:timeseries": "nest start --watch timeseries"
  },
  "dependencies": {
    "@nestjs/apollo": "^12.2.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.4.5",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/swagger": "^7.4.2",
    "apollo-server-express": "^3.13.0",
    "graphql": "^16.9.0",
    "kafkajs": "^2.2.4",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.2.2",
    "typescript": "^5.1.3"
  },
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}